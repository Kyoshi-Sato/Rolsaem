@model IEnumerable<BarApp.Models.Bebida>

<h2>Bebidas</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Nome", "Index", new { sortOrder = ViewBag.NameSortParm, searchString = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Preço", "Index", new { sortOrder = ViewBag.PriceSortParm, searchString = ViewBag.CurrentFilter })
            </th>
            <th>Estoque</th>
            <th>Origem</th>
            <th>Receita</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Preco)</td>
                <td>@Html.DisplayFor(modelItem => item.Estoque)</td>
                <td>@item.Origem?.origem</td>
                <td>@item.Receita?.receita</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
